<div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
<div class="col-lg-6">
  <div class="p-5">
    <div class="text-center">
      <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
    </div>
    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { method: :post, autocomplete: 'off'} ) do |f| %>
    	<%= flash_messages %>
      <%= f.input	:email, required: false, placeholder: true %>
			<%= f.input :password, required: false %>
      <div class="form-group">
        <div class="custom-control custom-checkbox small">
          <input type="checkbox" class="custom-control-input" id="customCheck">
          <label class="custom-control-label" for="customCheck">Remember Me</label>
        </div>
      </div>
      <div class="form-group form-actions">
				<%= f.submit I18n.t('login'), { :class => "btn btn-primary btn-user btn-block" } %>
			</div><!--/form-group-->
    <% end %>
    <hr>
    <div class="text-center">
      <%= link_to :create_an_account, new_user_registration_path, class: :small %>
    </div>
  </div>
</div>